    section#join_create_game
      .container
        .row
          .col-lg-12.text-center
            h2 Join / Create a Game
            hr
        .row
          .col-lg-8.col-lg-offset-2
            form#enterGameForm(name='sentMessage', novalidate='')
              .row.control-group
